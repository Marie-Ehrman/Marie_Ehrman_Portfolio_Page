extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 let portfolio = "Marie Ehrman"
      h4  A collection of my Treehouse Techdegree projects
      p.lead.text-light
        | A display of the progression of my basic Web Development skills in the last 8 months
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`/static/${project.image_urls[0]}` width="250" height="250")
            h5= project.project_name