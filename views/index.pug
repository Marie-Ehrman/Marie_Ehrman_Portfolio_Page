extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Marie Ehrman Portfolio
      br
      br
      h4  JavaScript/React Full Stack Development
      p.lead.text-light
        | A display of some of my JavaScript work
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`/static/${project.image_urls[0]}` width="250" height="250")
            h5= project.project_name